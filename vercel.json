{
  "version": 2,
  "builds": [
    {
      "src": "BackEnd/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "options": {
        "cwd": "Frontend"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/BackEnd/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}